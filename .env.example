# Wedding E-Invitation Platform - Local Development Environment
# Copy this file to .env and fill in your actual values

# Database Configuration
# For local development, you can use a local PostgreSQL instance or a cloud service like Neon
DATABASE_URL="postgresql://username:password@localhost:5432/wedding_invitation_db"

# Google Drive Integration
# Get these from Google Cloud Console OAuth2 credentials
GOOGLE_REFRESH_TOKEN="your_google_refresh_token_here"

# Optional: For production deployment
NODE_ENV="development"

# Port Configuration (optional - defaults are fine for local development)
# EXPRESS_PORT=5000
# FLASK_PORT=5001

# Admin Configuration (optional - for production)
# ADMIN_PASSWORD="your_admin_password"

# Google OAuth2 Credentials (if you need to regenerate tokens)
# GOOGLE_CLIENT_ID="your_google_client_id"
# GOOGLE_CLIENT_SECRET="your_google_client_secret"